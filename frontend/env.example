# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# IC Configuration
NEXT_PUBLIC_IC_HOST=http://localhost:4943
NEXT_PUBLIC_USER_CANISTER_ID=your-user-canister-id-here
NEXT_PUBLIC_MARKETPLACE_CANISTER_ID=your-marketplace-canister-id-here
NEXT_PUBLIC_HACKATHON_CANISTER_ID=your-hackathon-canister-id-here
NEXT_PUBLIC_CHAT_STORAGE_CANISTER_ID=your-chat-storage-canister-id-here

# SMTP Configuration (Email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Tebi S3 Configuration (Server-side credentials - not exposed to client)
TEBI_ACCESS_KEY_ID=your-tebi-access-key
TEBI_SECRET_ACCESS_KEY=your-tebi-secret-key

# Tebi S3 Configuration (Public - exposed to client)
NEXT_PUBLIC_TEBI_REGION=us-east-1
NEXT_PUBLIC_TEBI_BUCKET_NAME=your-tebi-bucket-name
NEXT_PUBLIC_TEBI_ENDPOINT=https://s3.tebi.io

# App Configuration
APP_NAME=Your App Name
NEXTAUTH_URL=http://localhost:3000
NODE_ENV=development
